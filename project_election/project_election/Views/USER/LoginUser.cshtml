@model project_election.Models.User

@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="/Content/assets1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/assets1/css/fontawesome-all.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/assets1/css/iofrm-style.css">
    <link rel="stylesheet" type="text/css" href="/Content/assets1/css/iofrm-theme4.css">
</head>
<body>
    <div class="form-body">
        <div class="website-logo">
            <a href="index.html">
                <div class="logo">
                    <img class="logo-size" src="~/Content/assets1/img/Logo02-removebg-preview.png" width:"80px" height:"80px" alt="">
                </div>
            </a>
        </div>
        <div class="row">
            <div class="img-holder">
                <div class="bg"></div>
                <div class="info-holder">
                    <img src="~/Content/assets1/img/graphic1.svg" alt="">
                </div>
            </div>
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>تسجيل الدخول إلى الحساب</h3>
                        <p>أدخل بريدك الإلكتروني وكلمة المرور لتسجيل الدخول</p>
                        @using (Html.BeginForm("LoginUser", "USER", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NationalNumber, new { @class = "form-control", placeholder = "الرقم الوطني", required = "required" })
                                @Html.ValidationMessageFor(model => model.NationalNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "البريد الإلكتروني", required = "required" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "كلمة المرور", required = "required" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-button">
                                <button id="submit" type="submit" class="ibtn">تسجيل الدخول</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets1/js/jquery.min.js"></script>
    <script src="~/assets1/js/popper.min.js"></script>
    <script src="~/assets1/jsbootstrap.min.js"></script>
    <script src="~/assets1/jsmain.js"></script>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


