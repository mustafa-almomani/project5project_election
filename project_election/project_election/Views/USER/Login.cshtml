@model project_election.Models.User

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .main-container {
            display: flex;
            height: auto;
            margin-top: 2rem;
            border: 1px solid groove;
        }

        .left-container, .right-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 30%;
        }

        .left-container {
            background-color: #ffffff;
            padding: 20px;
            text-align: center;
        }

        .loginimg {
            width: 500px;
            height: 400px;
        }

        .right-container {
            background-color: #28a745;
            padding: 20px;
            color: white;
            display: flex;
            box-shadow: 10px 10px 5px rgb(234, 236, 239);
            flex-direction: column;
            justify-content: center;
        }

        .register-form {
            max-width: 400px;
            width: 100%;
        }

            .register-form h2 {
                margin-bottom: 20px;
            }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-register {
            background-color: #ffffff;
            color: #28a745;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            width: 60%;
        }

            .btn-register:hover {
                background-color: #e8e8e8;
            }

        .social-register {
            margin-top: 15px;
            text-align: center;
        }

            .social-register a {
                margin: 0 10px;
                color: white;
                text-decoration: none;
            }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="left-container">
            <div>
                <img class="loginimg" src="https://brandio.io/envato/iofrm/html/images/graphic4.svg" alt="Illustration" style="max-width: 100%; height: auto;">
            </div>
        </div>
        <div class="right-container">
            <div class="register-form">
                <h2>@ViewBag.Title</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.NationalNumber, new { @class = "form-control", placeholder = "National Number" })
                        @Html.ValidationMessageFor(m => m.NationalNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mail Address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-register">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
