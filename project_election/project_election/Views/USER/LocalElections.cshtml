<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f2f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px;
    }

    .card.vote-card {
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: box-shadow 0.3s ease-in-out;
    }

    .card-title {
        margin-bottom: 20px;
        font-size: 1.75em;
        font-weight: 600;
        color: #333;
    }

    .form-check {
        margin-bottom: 15px;
    }

    .form-check-input {
        margin-right: 15px;
    }

    .form-check-label {
        font-size: 1.1em;
        color: #555;
    }

    .checkbox-group {
        margin-top: 20px;
    }

    .text-center {
        text-align: center;
    }

    .btn-success {
        background-color: #007bff;
        border-color: #007bff;
        color: #ffffff;
        padding: 12px 24px;
        font-size: 1.1em;
        border-radius: 6px;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #0056b3;
            border-color: #004494;
        }

    .vote-card:hover {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .candidates {
        margin-top: 20px;
    }
</style>
@using (Html.BeginForm("IncrementVoteLocal", "USER", FormMethod.Post, new { id = "voteForm", @class = "container mt-5" }))
{

    @Html.AntiForgeryToken()
    <div class="card vote-card">
        <div class="card-body">
            <h3 class="card-title">Select a List and its Candidates to Vote</h3>
            <div class="form-group">
                <h4>Choose a List:</h4>
                @foreach (var list in Model.LocalLists)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="list_@list.ID" name="listId" value="@list.ID" required />
                        <label class="form-check-label" for="list_@list.ID">@list.ListName</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <h4>Choose Candidates:</h4>
                @foreach (var list in Model.LocalLists)
                {
                    <div id="candidates_@list.ID" class="candidates" style="display:none;">
                        @foreach (var candidate in list.LocalListCandidates)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="candidateIds" value="@candidate.CandidateID" id="candidate_@candidate.CandidateID" />
                                <label class="form-check-label" for="candidate_@candidate.CandidateID">@candidate.CandidateName</label>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="text-center">
                <button type="submit" id="submitVoteButton" class="btn btn-success mt-3">Submit Vote</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[name="listId"]').change(function () {
                var selectedListId = $('input[name="listId"]:checked').val();
                $('.candidates').hide();
                $('#candidates_' + selectedListId).show();
            });

            $('#voteForm').submit(function (event) {
                event.preventDefault();

                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while processing your request.');
                    }
                });
            });
        });
    </script>
}
