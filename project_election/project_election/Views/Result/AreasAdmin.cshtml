@model IEnumerable<project_election.Models.Area>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Election Areas</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:300,400,500,700">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #f8f9fa;
        }

        h1, h2, h3 {
            font-family: 'Raleway', sans-serif;
        }

        h2 {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 30px;
            margin-top: 0;
            color: #333;
        }

        .padded {
            padding: 60px 0;
        }

        .wrapper-grey {
            background: #f4f4f4;
        }

        .table {
            background: white;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table img {
                width: 60px;
                height: 60px;
                border-radius: 50%;
            }

            .table .category {
                font-weight: bold;
            }

            .table .description {
                font-size: 14px;
            }

            .table .button {
                text-align: center;
            }
    </style>
</head>

<body>
    <div class="wrapper-grey padded">
        <div class="container">
            <h2 class="text-center">Election Areas</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Governorate</th>
                        <th>Name of Election Area</th>
                        <th>Number of Seats</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var area in Model)
                    {
                        // Set static image URLs directly
                        string imageUrl = area.Governorate == "Irbid" ? "https://www.iec.jo/themes/custom/iec/share-image.png" : "https://example.com/images/default.jpg";

                        <tr>
                            <td>
                                <img src="@imageUrl" alt="Area Image" />
                            </td>
                            <td class="category">@area.Governorate</td>
                            <td>@area.NameOfElectionArea</td>
                            <td>@area.NumberOfElectoralSeats</td>
                            <td class="button">
                                <a class="btn btn-primary" href="@Url.Action("ListsAdmin", "Result", new { id = area.ElectionAreaID })">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Including Bootstrap JS and its jQuery dependency -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>
</html>
